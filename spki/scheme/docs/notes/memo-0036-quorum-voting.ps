(    \(define \(submit-vote vote\)) show newline
(      "Submit vote to ballot coordinator") show newline
(      ;; Verify eligibility) show newline
(      \(unless \(eligible-voter? \(vote-voter vote\) \(vote-ballot-id vote\)\)) show newline
(        \(error 'not-eligible\)\)) show newline
(      ;; Verify validity proof) show newline
(      \(unless \(verify-validity-proof vote\)) show newline
(        \(error 'invalid-vote-proof\)\)) show newline
