(    \(define \(generate-validity-proof encrypted-vote choice public-key\)) show newline
(      "ZK proof that vote encodes valid choice") show newline
(      ;; Disjunctive proof: prove one of N possibilities) show newline
(      ;; Without revealing which) show newline
(      \(let \(\(n \(length encrypted-vote\)\)\)) show newline
(        \(make-or-proof) show newline
(          \(map \(lambda \(i\)) show newline
(                 \(if \(= i \(choice-index choice\)\)) show newline
(                     ;; Real proof for actual choice) show newline
(                     \(make-encryption-proof \(list-ref encrypted-vote i\) 1 public-key\)) show newline
(                     ;; Simulated proof for other choices) show newline
(                     \(simulate-encryption-proof \(list-ref encrypted-vote i\) 1 public-key\)\)\)) show newline
(               \(iota n\)\)\)\)\)) show newline
(    \(define \(verify-validity-proof vote\)) show newline
(      "Verify vote validity without learning choice") show newline
(      \(let \(\(proof \(vote-proof vote\)\)) show newline
(            \(ciphertext \(vote-ciphertext vote\)\)) show newline
(            \(pub-key \(ballot-public-key \(vote-ballot-id vote\)\)\)\)) show newline
(        ;; Verify OR proof) show newline
(        \(and \(verify-or-proof proof ciphertext pub-key\)) show newline
(             ;; Verify sum of encrypted values equals Enc\(1\)) show newline
(             \(verify-sum-equals-one ciphertext pub-key\)\)\)\)) show newline
