(    \(define \(decrypt-tally ballot encrypted-tally\)) show newline
(      "Threshold decrypt the tally") show newline
(      \(let* \(\(trustees \(ballot-trustees ballot\)\)) show newline
(             \(threshold \(ballot-key-threshold ballot\)\)) show newline
(             \(shares '\(\)\)\)) show newline
(        ;; Collect decryption shares) show newline
(        \(for-each \(lambda \(trustee\)) show newline
(                    \(let \(\(share \(request-decryption-share trustee) show newline
(                                   \(ballot-id ballot\)) show newline
(                                   encrypted-tally\)\)\)) show newline
(                      \(when share) show newline
(                        \(set! shares \(cons share shares\)\)\)\)\)) show newline
(                  trustees\)) show newline
(        ;; Need threshold shares) show newline
(        \(unless \(>= \(length shares\) threshold\)) show newline
(          \(error 'insufficient-decryption-shares\)\)) show newline
(        ;; Combine shares to decrypt) show newline
(        \(let \(\(plaintext-tally) show newline
(               \(map \(lambda \(ct\)) show newline
(                      \(threshold-decrypt ct shares\)\)) show newline
(                    encrypted-tally\)\)\)) show newline
(          ;; Publish result) show newline
(          \(publish-result ballot plaintext-tally\)) show newline
(          plaintext-tally\)\)\)) show newline
